@model IEnumerable<JFTareaPersonalizacion.Models.JFsuplementos>

@{
    ViewData["Title"] = "JFSuplementos";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">JFSuplementos</h1>

    <p>
        <a asp-action="JFCreate" class="btn btn-primary">Ingresa un nuevo suplemento</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Whey)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cafeina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>
                        @if (item.Whey)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>
                        @if (item.Cafeina)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>$@String.Format("{0:0.00}", item.Precio)</td>
                    <td>
                        <a asp-action="JFEdit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="JFDetails" asp-route-id="@item.ID" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="JFDelete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
